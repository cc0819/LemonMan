<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="210dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager_dis_carousel"
            android:layout_width="wrap_content"
            android:layout_height="210dp"
            android:background="#66ccff" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/iv_dot1"
                android:layout_width="17dp"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/iv_dot2"
                android:src="@drawable/abc_scrubber_control_off_mtrl_alpha" />

            <ImageView
                android:id="@+id/iv_dot2"
                android:layout_width="17dp"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/iv_dot3"
                android:src="@drawable/abc_scrubber_control_off_mtrl_alpha" />

            <ImageView
                android:id="@+id/iv_dot3"
                android:layout_width="17dp"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/iv_dot4"
                android:src="@drawable/abc_scrubber_control_off_mtrl_alpha" />

            <ImageView
                android:id="@+id/iv_dot4"
                android:layout_width="17dp"
                android:layout_height="match_parent"
                android:src="@drawable/abc_switch_track_mtrl_alpha" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>